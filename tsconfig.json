{
  "compilerOptions": {
    // === Output Settings ===
    // Welche JavaScript-Version soll rauskommen? (ES2020 = modernes JS)
    "target": "ES2020",
    
    // Welches Modul-System nutzen? (ES2020 = import/export, für Browser)
    "module": "ES2020",
    
    // Welche Standard-Bibliotheken sind verfügbar? (ES2020 + DOM = Browser-APIs)
    "lib": ["ES2020", "DOM"],
    
    // Wohin soll das kompilierte JavaScript? (Output-Verzeichnis)
    "outDir": "./app/public/assets",
    
    // Wo sind die TypeScript-Quelldateien? (Input-Verzeichnis)
    "rootDir": "./app/src",
    
    // === Type Checking ===
    // Strenge Typ-Prüfung aktivieren (empfohlen für sicheren Code)
    "strict": true,
    
    // === Module Resolution ===
    // Wie sollen Module aufgelöst werden? (node = wie in Node.js/npm)
    "moduleResolution": "node",
    
    // Erlaubt "import x from 'module'" statt "import * as x from 'module'"
    "esModuleInterop": true,
    
    // Erlaubt default imports auch wenn Modul keinen default export hat
    "allowSyntheticDefaultImports": true,
    
    // JSON-Dateien können importiert werden
    "resolveJsonModule": true,
    
    // === Other ===
    // Überspringe Typ-Checks in .d.ts Dateien (schnelleres Kompilieren)
    "skipLibCheck": true,
    
    // Groß-/Kleinschreibung bei Dateinamen muss konsistent sein
    "forceConsistentCasingInFileNames": true
  },
  
  // Welche Dateien sollen kompiliert werden?
  "include": ["app/src/**/*.ts"],
  
  // Welche Dateien sollen NICHT kompiliert werden?
  "exclude": ["node_modules", "**/*.spec.ts"]
}